// schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Bojen {
  id  String   @default(cuid()) @id
  ts_key String
}

model marker_geschichte {
  id            String       @default(cuid()) @id
  name          String
  latitude      Float
  longitude     Float
  excerpt String?
  url String
  createdAt     DateTime  @default(now()) @map(name: "created_at")
}

model marker_aktuelles {
  id            String       @default(cuid()) @id
  name          String
  latitude      Float
  longitude     Float
  excerpt String?
  url String
  createdAt     DateTime  @default(now()) @map(name: "created_at")
}

model marker_visionen {
  id            String       @default(cuid()) @id
  name          String
  latitude      Float
  longitude     Float
  excerpt String?
  url String
  createdAt     DateTime  @default(now()) @map(name: "created_at")
}

